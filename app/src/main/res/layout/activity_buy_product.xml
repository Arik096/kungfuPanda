<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#22fff8"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".buyProductActivity">



    <EditText
        android:id="@+id/productIdEditTextid"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Product ID"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:textSize="30sp"


        />

    <EditText
        android:id="@+id/productNameEditTextid"

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Product Name"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:textSize="30sp"


        />

    <Button
        android:id="@+id/saveButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#43ff22"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:text="save"
        android:textStyle="bold"


        />

    <Button
        android:id="@+id/showButtonId"
        android:background="#43ff22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:text="show"
        android:textStyle="bold"


        />

    <Button
        android:id="@+id/updateButtonId"
        android:background="#43ff22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:text="update"
        android:textStyle="bold"


        />

    <Button
        android:id="@+id/deleteButtonId"
        android:background="#43ff22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:text="delete"
        android:textStyle="bold"


        />



</LinearLayout>